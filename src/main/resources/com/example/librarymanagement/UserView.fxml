<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane prefHeight="800.0" prefWidth="1200" xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymanagement.BookController">
    <VBox>
        <HBox prefHeight="40.0">
            <Button onAction="#goToLoanSlip" prefWidth="100.0" text="Loan Slip">
                <HBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
            <Button onAction="#goToLoginScene" prefWidth="100.0" text="Log out">
                <HBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
        <HBox alignment="TOP_CENTER" focusTraversable="true" prefHeight="23.0" prefWidth="1200.0"
              style="-fx-border-color: lightgray;">
            <children>
                <TextField fx:id="titleSearch" prefWidth="200.0" promptText="Title">
                    <HBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </HBox.margin>
                </TextField>
                <TextField fx:id="authorSearch" prefWidth="200.0" promptText="Author">
                    <HBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </HBox.margin>
                </TextField>
                <TextField fx:id="releaseYearSearch" prefWidth="100.0" promptText="Release year">
                    <HBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </HBox.margin>
                </TextField>
                <TextField fx:id="statusSearch" prefWidth="100.0" promptText="Status">
                    <HBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </HBox.margin>
                </TextField>
                <Button mnemonicParsing="false" onAction="#search" prefWidth="100.0" text="Search">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets bottom="20.0" top="10.0"/>
            </VBox.margin>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </HBox>
    </VBox>

    <VBox prefHeight="760.0" prefWidth="1200" BorderPane.alignment="CENTER" GridPane.rowIndex="1">
        <HBox prefHeight="680.0" style="-fx-background-color: white;" fillHeight="true">
            <TableView fx:id="tableUser" fixedCellSize="50.0" focusTraversable="false" prefWidth="1150.0"
                       style="-fx-border-color: white; -fx-background-color: white;">
                <columns>
                    <TableColumn fx:id="userImgCol" prefWidth="120.0"
                                 style="-fx-border-color: lightgray; -fx-background-color: white;" text="Image"/>
                    <TableColumn fx:id="userTitleCol" minWidth="150.0"
                                 style="-fx-background-color: white; -fx-border-color: lightgray;" text="Title"/>
                    <TableColumn fx:id="userAuthorCol" minWidth="150.0"
                                 style="-fx-border-color: lightgray; -fx-background-color: white;" text="Author"/>
                    <TableColumn fx:id="userReleaseYearCol" minWidth="100.0"
                                 style="-fx-background-color: white; -fx-border-color: lightgray;" text="Release Year"/>
                    <TableColumn fx:id="userGenreCol" minWidth="100.0"
                                 style="-fx-background-color: white; -fx-border-color: lightgray;" text="Genre"/>
                    <TableColumn fx:id="userStatusCol" minWidth="100.0"
                                 style="-fx-border-color: lightgray; -fx-background-color: white;" text="Status"/>
                    <TableColumn fx:id="userActionCol" minWidth="100.0"
                                 style="-fx-border-color: lightgray; -fx-background-color: white;" text=" "/>
                </columns>
            </TableView>
        </HBox>
    </VBox>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
</GridPane>