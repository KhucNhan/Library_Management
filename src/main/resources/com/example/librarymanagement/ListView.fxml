<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<GridPane prefHeight="720.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymanagement.BookController">
    <HBox prefHeight="34.0">
            <Button onAction="#goToLoanSlip" prefWidth="80.0" text="Loan Slip">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin></Button>
            <Button onAction="#goToLoginScene" prefWidth="80.0" text="Log out">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin></Button>
    </HBox>
    <VBox prefHeight="720.0" prefWidth="1079" BorderPane.alignment="CENTER" GridPane.rowIndex="1">
        <HBox prefHeight="720.0" style="-fx-background-color: white;">
            <TableView fx:id="table" fixedCellSize="50.0" focusTraversable="false" prefHeight="670.0" style="-fx-border-color: white; -fx-background-color: white;">
                <columns>
                    <TableColumn fx:id="idCol" minWidth="100.0" style="-fx-border-color: lightgray; -fx-background-color: white;" text="ID" />
                    <TableColumn fx:id="imgCol" prefWidth="100.0" style="-fx-border-color: lightgray; -fx-background-color: white;" text="Image"/>
                    <TableColumn fx:id="titleCol" minWidth="100.0" style="-fx-background-color: white; -fx-border-color: lightgray;" text="Title" />
                    <TableColumn fx:id="authorCol" minWidth="100.0" style="-fx-border-color: lightgray; -fx-background-color: white;" text="Author" />
                    <TableColumn fx:id="releaseYearCol" minWidth="100.0" style="-fx-background-color: white; -fx-border-color: lightgray;" text="Release Year" />
                    <TableColumn fx:id="genreCol" minWidth="100.0" style="-fx-background-color: white; -fx-border-color: lightgray;" text="Genre" />
                    <TableColumn fx:id="statusCol" minWidth="100.0" style="-fx-border-color: lightgray; -fx-background-color: white;" text="Status" />
                    <TableColumn fx:id="actionCol" minWidth="300.0" style="-fx-border-color: lightgray; -fx-background-color: white;" text=" " />
                </columns>
            </TableView>
        </HBox>

        <VBox prefHeight="100.0" prefWidth="1079">
            <children>
                <HBox alignment="CENTER_LEFT" focusTraversable="true" prefHeight="52.0" prefWidth="719.0" style="-fx-border-color: lightgray;">
                    <children>
                        <TextField fx:id="idAdd" prefWidth="90.0" promptText="ID">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0" />
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="imgAdd" prefWidth="90.0" promptText="Image URL">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0" />
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="titleAdd" prefWidth="90.0" promptText="Title">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0" />
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="authorAdd" prefWidth="90.0" promptText="Author">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0" />
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="releaseYearAdd" prefWidth="90.0" promptText="Release year">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0" />
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="genreAdd" prefWidth="90.0" promptText="Genre">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0" />
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="statusAdd" prefWidth="90.0" promptText="Status">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0" />
                            </HBox.margin>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#add" prefWidth="80.0" text="Add">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </VBox>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
